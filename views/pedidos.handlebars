<div class="d-flex flex-column flex-md-row vh-100 overflow-hidden">
    {{>sidebar}}

    <div class="d-flex flex-column overflow-auto col-9 m-5 align-items-center ">
        <h1>Pedidos</h1>


        <div class="tm-product-table-container mt-3">
        <table class="table table-hover tm-table-small tm-product-table">
            <thead>
                <tr>
                <th scope="col">KG</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direcci√≥n</th>
                <th scope="col"></th>
                <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <th scope="row">
                        <p>{{this.quantity}}</p>
                    </th>
                    <td class="tm-product-name">{{this.name}}</td>
                    <td><p>{{this.address}}</p></td>
                    <td>
                        <form method="POST" action="eliminar" style="all: unset;">
                            <input style="display: none;" value="orders" name="table" type="text">
                            <input style="display: none;" value="{{this.id}}" name="id" type="text">
                            <button type="submit" class="tm-product-delete-link btn btn-primary px-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-all" viewBox="0 0 16 16">
                                    <path d="M8.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L2.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093L8.95 4.992zm-.92 5.14.92.92a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 1 0-1.091-1.028L9.477 9.417l-.485-.486z"/>
                                    </svg>
                            </button>
                        </form>
                    </td>
                </tr>

                {{/each}}
            </tbody>
        </table>
        </div>      

                
       
    </div>

    


</div>

