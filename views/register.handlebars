{{>navbar}}


<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100 ">
        <div class="col">
          <div class="card card-registration my-4">
            <div class="row g-0 bg-dark">
              <div class="col-xl-6 d-none d-xl-flex align-items-center justify-content-center">
                <img src="/images/paltafeliz.png"
                  alt="Sample photo" class="img-fluid w-100 h-75"
                  style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
              </div>
              <div class="col-xl-6">
                <div class="card-body p-md-5 text-white">
                  <h3 class="mb-5 text-uppercase">Formulario de Registro</h3>
  
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div data-mdb-input-init class="form-outline">
                        <input placeholder="Nombre" type="text" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />    
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div data-mdb-input-init class="form-outline">
                        <input placeholder="Apellido" type="text" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />
                      </div>
                    </div>
                  </div>
  
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input placeholder="Dirección" type="text" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />
                  </div>
  
                  <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
  
                    <h6 class="mb-0 me-4">Genero: </h6>
  
                    <div class="form-check form-check-inline mb-0 me-4">
                      <input class="form-check-input" type="radio" name="inlineRadioOptions"
                        value="option1" />
                      <label class="form-check-label" for="femaleGender">Mujer</label>
                    </div>
  
                    <div class="form-check form-check-inline mb-0 me-4">
                      <input class="form-check-input" type="radio" name="inlineRadioOptions"
                        value="option2" />
                      <label class="form-check-label" for="maleGender">Hombre</label>
                    </div>
  
                    <div class="form-check form-check-inline mb-0">
                      <input class="form-check-input" type="radio" name="inlineRadioOptions"
                        value="option3" />
                      <label class="form-check-label" for="otherGender">Otros</label>
                    </div>
  
                  </div>
  
                  <div class="row">
                    <div class="col-md-6 mb-4">
  
                      <select class="bg-dark p-2 text-white rounded" data-mdb-select-init>
                        <option value="1">Región</option>
                        <option value="2">Option 1</option>
                        <option value="3">Option 2</option>
                        <option value="4">Option 3</option>
                      </select>
  
                    </div>
                    <div class="col-md-6 mb-4">
  
                      <select class="bg-dark p-2 text-white rounded" data-mdb-select-init>
                        <option value="1">Comuna</option>
                        <option value="2">Option 1</option>
                        <option value="3">Option 2</option>
                        <option value="4">Option 3</option>
                      </select>
  
                    </div>
                  </div>
  
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input placeholder="Código Postal" type="text" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />
                  </div>
  
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input placeholder="Email" type="email" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />
                  </div>
  
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input placeholder="Contraseña" type="password" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />
                  </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <input placeholder="Repetir Contraseña" type="password" class="form-control form-control-lg bg-dark text-secondary placeholder-secondary" />
                  </div>
  
                  <div class="d-flex justify-content-end pt-3">
                    <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-light btn-lg">Reset all</button>
                    <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn bg-body-verde btn-lg ms-2">Submit form</button>
                  </div>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>


{{>footer}}