<div class="d-flex flex-column flex-md-row vh-100 overflow-hidden">
    {{>sidebar}}

    <div class="d-flex flex-column overflow-auto col-9 m-5 align-items-center ">
        <h1>Editar Producto</h1>

        

        <form class="w-75" method="POST">
            <div class="form-group my-4">
                <label for="nombre">Nombre Producto</label>
                <input type="text" value="{{product.name}}" class="form-control" id="nombre" name="nombre">
            </div>
            <div class="form-group my-4">
                <label for="stock">Stock</label>
                <input type="number" value="{{product.stock}}" class="form-control" id="stock" name="stock">
            </div>
            <div class="form-group my-4">
                <label for="precio">Precio</label>
                <input type="number" value="{{product.price}}" class="form-control" id="precio" name="precio">
            </div>
            <div class="form-group my-4">
                <label for="descripcion">Descripci√≥n</label>
                <textarea class="form-control" id="descripcion" name="descripcion">{{product.description}}</textarea>
            </div>
            <div class="form-group my-4 d-flex flex-column">
                
                <label for="imagen">Imagen</label>
                <img class="my-4" src="/products/{{product.image}}" height="250" width="250">
                <input type="file" value="" id="imagen" name="imagen" accept="image/jpeg">
            </div>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>

    </div>


</div>