<div class="d-flex flex-column flex-md-row vh-100 overflow-hidden">
    {{>sidebar}}

    <div class="d-flex flex-column overflow-auto col-9 m-5 align-items-center ">
        <h1>Añadir Producto</h1>

        

        <form class="w-75" method="POST">
            <div class="form-group my-4">
                <label for="nombre">Nombre Producto</label>
                <input type="text" class="form-control" id="nombre" name="nombre">
            </div>
            <div class="form-group my-4">
                <label for="stock">Stock</label>
                <input type="number" class="form-control" id="stock" name="stock">
            </div>
            <div class="form-group my-4">
                <label for="precio">Precio</label>
                <input type="number" class="form-control" id="precio" name="precio">
            </div>
            <div class="form-group my-4">
                <label for="descripcion">Descripción</label>
                <textarea class="form-control" id="descripcion" name="descripcion"></textarea>
            </div>
            <div class="form-group my-4">
                <label for="imagen">Imagen</label>
                <input type="file" id="imagen" name="imagen" accept="image/jpeg">
            </div>
            <button type="submit" class="btn btn-primary">Añadir Producto</button>
        </form>
    </div>

    


</div>

