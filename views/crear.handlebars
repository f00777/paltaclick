<div class="d-flex flex-column flex-md-row vh-100 overflow-hidden">
    {{>sidebar}}

    <div class="d-flex flex-column overflow-auto col-9 m-5 align-items-center ">
        <h1>Añadir Producto</h1>

        

        <form class="w-75" method="POST">
            <div class="form-group my-4">
                <label for="name">Nombre Producto</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group my-4">
                <label for="stock">Stock</label>
                <input type="number" class="form-control" id="stock" name="stock">
            </div>
            <div class="form-group my-4">
                <label for="price">Precio</label>
                <input type="number" class="form-control" id="price" name="price">
            </div>
            <div class="form-group my-4">
                <label for="description">Descripción</label>
                <textarea class="form-control" id="description" name="description"></textarea>
            </div>
            <div class="form-group my-4">
                <label for="image">Imagen</label>
                <input type="file" id="image" name="image" accept="image/jpeg">
            </div>
            <button type="submit" class="btn btn-primary">Añadir Producto</button>
        </form>
    </div>

    


</div>

